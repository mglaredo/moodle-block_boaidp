	<TABLE NAME="block_boaidp_oai_metadata_schema" COMMENT="Table for metadata schemas" PREVIOUS="block_boaidp_oai_records" NEXT="block_boaidp_oai_metadata_fields">
		<FIELDS>
			<FIELD NAME="id" TYPE="int" LENGTH="11" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="prefix"/>
			<FIELD NAME="prefix" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="name"/>
			<FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="prefix" />
		</FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
     </TABLE>

	<TABLE NAME="block_boaidp_oai_metadata_fields" COMMENT="Table for defining the metadata fields composing each schema" PREVIOUS="block_boaidp_oai_metadata_schema" NEXT="block_boaidp_oai_metadata_values">
		<FIELDS>
			<FIELD NAME="id" TYPE="int" LENGTH="11" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false"  NEXT="schema_id"/>
			<FIELD NAME="schema_id" TYPE="int" LENGTH="11" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="name"/>
			<FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="schema_id" NEXT="ismultiple" />
			<FIELD NAME="ismultiple" TYPE="int" LENGTH="1" NOTNULL="true" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" PREVIOUS="name"/>
		</FIELDS>     
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

	<TABLE NAME="block_boaidp_oai_metadata_values" COMMENT="Table for values (multiple accepted) to field types of metadata" PREVIOUS="block_boaidp_oai_metadata_fields">
		<FIELDS>
			<FIELD NAME="id" TYPE="int" LENGTH="11" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="provider"/>
			<FIELD NAME="provider" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="field_id"/>
			<FIELD NAME="field_id" TYPE="int" LENGTH="11" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="provider" NEXT="value"/>
			<FIELD NAME="value" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" ENUM="false" PREVIOUS="field_id"/>
		</FIELDS>
		<KEYS>
			<KEY NAME="primary" TYPE="primary" FIELDS="id"/>
		</KEYS>
	</TABLE>         
